!!! Strict
%html{ :lang => "pl", :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %meta{ :content => "text/html; charset=utf-8", "http-equiv" => "Content-Type" }
    %title
      JQtouch Toolbar test
    %style{ :type => "text/css", :media => "screen" }
      @import "jqtouch/jqtouch.min.css";
    %style{ :type => "text/css", :media => "screen" }
      @import "jqtouch/themes/jqt/theme.min.css";
    %script{ :src => "jqtouch/jquery.1.3.2.min.js", :type => "text/javascript", :charset => "utf-8" }
    %script{ :src => "jqtouch/jqtouch.min.js", :type => "application/x-javascript", :charset => "utf-8" }
    :javascript
      var jQT = new $.jQTouch();
    %body
      #index
        .toolbar
          %h1
            My app
        %ul.rounded
          %li
            %a{ :href => "#foo" }
              Foo
          %li
            %a{ :href => "#bar" }
              Bar
          %li
            %a{ :href => "/home" }
              Home
          %li
            %a{ :href => "/about" }
              About
      #foo
        .toolbar
          %h1
            Foo
          %a.back{ :href => "#" }
            Back
        .info
          Foo!!
      #bar
        .toolbar
          %h1
            Bar
          %a.back{ :href => "#" }
            Back
        .info
          Bar!!
